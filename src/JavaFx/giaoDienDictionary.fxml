<AnchorPane onDragDetected="#actionEvent" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaFx.controllerFx">
   <children>

      <ListView fx:id="listView" layoutY="111.0" onMouseClicked="#displayMouse" prefHeight="493.0" prefWidth="350.0" style="-fx-border-color: white;" />
      <WebView fx:id="webView" layoutX="350.0" layoutY="153.0" prefHeight="451.0" prefWidth="456.0" />
      <AnchorPane layoutY="26.0" prefHeight="84.0" prefWidth="806.0" style="-fx-background-color: #007CDB;">
         <children>
            <TextField fx:id="textFieldInput" layoutX="9.0" layoutY="26.0" onKeyPressed="#KeyPress" onKeyReleased="#showList" prefHeight="32.0" prefWidth="263.0" promptText="Search" style="-fx-border-color: blue;">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <Label layoutX="480.0" layoutY="14.0" text="Dictionary" textFill="#110536">
               <font>
                  <Font name="Yu Mincho Demibold" size="43.0" />
               </font>
            </Label>
            <ImageView fitHeight="63.0" fitWidth="60.0" layoutX="420.0" layoutY="12.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@vocabularyMain.png" />
               </image>
            </ImageView>
            <Button layoutX="272.0" layoutY="26.0" mnemonicParsing="false" onAction="#handleButtonFind" prefHeight="29.0" prefWidth="52.0">
               <graphic>
                  <ImageView fitHeight="31.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@searchFind.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </AnchorPane>
      <MenuBar prefHeight="29.0" prefWidth="806.0">
        <menus>
          <Menu mnemonicParsing="false" text="Menu">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleButtonActionAPI" text="API google" />
              <MenuItem mnemonicParsing="false" onAction="#handleButtonActionExit" text="Close">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="X" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
            </items>
               <accelerator>
                  <KeyCodeCombination alt="UP" code="X" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
               </accelerator>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleButtonActionAddNewWord" text="Add" />
                  <MenuItem mnemonicParsing="false" onAction="#handleButtonActionEditWord" text="Fix" />
              <MenuItem mnemonicParsing="false" onAction="#handleButtonActionDelete" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Label fx:id="labelOutput" layoutX="350.0" layoutY="111.0" prefHeight="42.0" prefWidth="403.0" style="-fx-background-color: white;">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <ImageView fitHeight="39.0" fitWidth="52.0" layoutX="760.0" layoutY="113.0" onMouseClicked="#handleButtonActionListen" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@sound.png" />
         </image>
      </ImageView>

   </children>
</AnchorPane>
