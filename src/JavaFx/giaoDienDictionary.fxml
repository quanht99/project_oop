<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>

<AnchorPane onDragDetected="#actionEvent" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaFx.controllerFx">
   <children>

      <ListView fx:id="listView" layoutY="111.0" onMouseClicked="#displayMouse" prefHeight="484.0" prefWidth="350.0" />
      <WebView fx:id="webView" layoutX="350.0" layoutY="142.0" prefHeight="453.0" prefWidth="455.0" />
      <Button alignment="CENTER" layoutX="738.0" layoutY="111.0" mnemonicParsing="false" onAction="#handleButtonActionListen" prefHeight="30.0" prefWidth="68.0" text="Listen">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <AnchorPane layoutY="26.0" prefHeight="84.0" prefWidth="806.0" style="-fx-background-color: #9FD8CB;">
         <children>
            <TextField fx:id="textFieldInput" layoutX="9.0" layoutY="26.0" onKeyPressed="#KeyPress" onKeyReleased="#showList" prefHeight="32.0" prefWidth="263.0" promptText="Search" style="-fx-border-color: blue;">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Button alignment="CENTER" layoutX="272.0" layoutY="26.0" mnemonicParsing="false" onAction="#handleButtonFind" prefHeight="32.0" prefWidth="77.0" text="Find" textAlignment="RIGHT" textFill="#021617">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Label layoutX="480.0" layoutY="14.0" text="Dictionary" textFill="#110536">
               <font>
                  <Font name="Yu Mincho Demibold" size="43.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <MenuBar layoutY="-1.0" prefHeight="30.0" prefWidth="806.0" style="-fx-background-color: #38AECC;">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleButtonActionExit" text="Close">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="X" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
            </items>
               <accelerator>
                  <KeyCodeCombination alt="UP" code="X" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
               </accelerator>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleButtonActionAddNewWord" text="Add" />
                  <MenuItem mnemonicParsing="false" onAction="#handleButtonActionEditWord" text="Fix" />
              <MenuItem mnemonicParsing="false" onAction="#handleButtonActionDelete" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Label fx:id="labelOutput" layoutX="350.0" layoutY="111.0" prefHeight="30.0" prefWidth="388.0" style="-fx-background-color: white;">
         <font>
            <Font size="16.0" />
         </font>
      </Label>

   </children>
</AnchorPane>
