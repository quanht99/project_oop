      </Button>
      <Button layoutX="315.0" layoutY="59.0" mnemonicParsing="false" onAction="#handleButtonActionSearchAPI" prefHeight="41.0" prefWidth="51.0">
         <graphic>
            <ImageView fitHeight="27.0" fitWidth="30.0" onMouseClicked="#handleButtonActionSearchAPI" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@magnifying-glass.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
